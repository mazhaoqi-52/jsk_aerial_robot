<launch>

  <arg name="robot_id" default="1"/>
  <arg name="robot_ns" default="assemble_quadrotors"/>

  <node pkg="mocap_optitrack"
    type="mocap_node"
    name="mocap_node"
    respawn="false"
    launch-prefix=""
    required="true">
    <rosparam subst_value="true">
      rigid_bodies:
         '$(arg robot_id)':
               pose: '$(arg robot_ns)'/mocap/pose
               pose2d: mocap/ground_pose
               child_frame_id: baselink
               parent_frame_id: world
      optitrack_config:
         multicast_address: 239.255.42.99
         command_port: 1510
         data_port: 1511
    </rosparam>
    <remap from="~$(arg robot_ns)/mocap/pose" to="$(arg robot_ns)/mocap/pose" />
  </node>

</launch>
